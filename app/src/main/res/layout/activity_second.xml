<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFBFC"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/album_icon"
        android:layout_width="323dp"
        android:layout_height="324dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/album_name"
        android:layout_margin="20dp"
        android:layout_marginBottom="-148dp" />

    <TextView
        android:id="@+id/song_name"
        style="@style/Songname"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_icon"
        android:textColor="#0E0C0C"
        android:layout_margin="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/album_name"
        style="@style/Albumname"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_name"
        android:textColor="#0E0C0C"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="40dp"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:layout_below="@+id/song_name"
        android:src="@drawable/ic_fast_rewind_black_24dp"
        />

    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:layout_below="@id/song_name"
        android:layout_toRightOf="@id/left_icon"
        android:src="@drawable/ic_play_arrow_black_24dp"/>

    <ImageView
        android:layout_below="@id/song_name"
        android:id="@+id/right_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="25dp"
        android:layout_toRightOf="@id/play_icon"
        android:src="@drawable/ic_fast_forward_black_24dp" />


</RelativeLayout>
